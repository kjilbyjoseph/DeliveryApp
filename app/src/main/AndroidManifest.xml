<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deliveryapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeliveryApp">
        <activity
            android:name=".Activities.HomePage"
            android:exported="true"
            android:label="@string/title_activity_home_page"
            android:theme="@style/Theme.DeliveryApp.splashscreen" />
        <activity
            android:name=".Activities.WelcomeScreen"
            android:exported="true"
            android:theme="@style/Theme.DeliveryApp.splashscreen" />
        <activity
            android:name=".Activities.BankDetails"
            android:exported="true"
            android:theme="@style/Theme.DeliveryApp.splashscreen" />
        <activity
            android:name=".Activities.Upload_Adhar_photo"
            android:exported="true"
            android:theme="@style/Theme.DeliveryApp.splashscreen" />
        <activity
            android:name=".Activities.Address_Details"
            android:exported="true"
            android:theme="@style/Theme.DeliveryApp.splashscreen" />
        <activity
            android:name=".Activities.OTP_Verification"
            android:exported="true"
            android:theme="@style/Theme.DeliveryApp.splashscreen" />
        <activity
            android:name=".Activities.logins"
            android:exported="true"
            android:theme="@style/Theme.DeliveryApp.splashscreen" />
        <activity
            android:name=".Activities.New_user_Registration"
            android:exported="true"
            android:theme="@style/Theme.DeliveryApp.splashscreen" />
        <activity
            android:name=".Activities.splashscreen"
            android:exported="true"
            android:theme="@style/Theme.DeliveryApp.splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true" />
    </application>

</manifest>