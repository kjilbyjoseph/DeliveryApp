<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.BankDetails">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/backarrow"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_arrow_back_24" />
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logo_3" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_below="@+id/appbar"
        android:background="@drawable/registration"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:isScrollContainer="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:gravity="center"
                    android:text="Bank Details"
                    android:textColor="#1585BC"
                    android:textSize="20dp"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/square"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/beneficiary_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Beneficiary Name"
                            android:inputType="phone"
                            android:letterSpacing=".06"
                            android:maxLength="10"
                            android:textColor="#D4D4D4"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:paddingLeft="16dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/square"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/account_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Account Number"
                            android:inputType="phone"
                            android:letterSpacing=".06"
                            android:maxLength="20"
                            android:textColor="#D4D4D4"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:paddingLeft="16dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/square"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/re_acno"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Re-enter account number"
                            android:inputType="phone"
                            android:letterSpacing=".06"
                            android:maxLength="20"
                            android:textColor="#D4D4D4"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:paddingLeft="16dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/square"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ifsc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="IFSC"
                            android:inputType="phone"
                            android:letterSpacing=".06"
                            android:maxLength="20"
                            android:textColor="#D4D4D4"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:paddingLeft="16dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/square"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bsnkname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Bank Name"
                            android:inputType="phone"
                            android:letterSpacing=".06"
                            android:maxLength="10"
                            android:textColor="#D4D4D4"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:paddingLeft="16dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/square"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bankbranch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Bank Branch"
                            android:inputType="phone"
                            android:letterSpacing=".06"
                            android:maxLength="20"
                            android:textColor="#D4D4D4"
                            android:background="@null"
                            android:drawablePadding="10dp"
                            android:paddingLeft="16dp"
                            android:textSize="15sp" />
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/next"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp"
                    android:text="Continue"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#ffffff"
                    android:background="@drawable/continuetextview"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>



    </LinearLayout>
</LinearLayout>